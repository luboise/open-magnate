{
	"name": "backend",
	"version": "1.0.0",
	"main": "index.ts",
	"scripts": {
		"build": "tsc",
		"start": "node dist/backend/src/index.js",
		"migrate": "npx prisma migrate db --name init",
		"migrate-dev": "npx dotenv -e .env.dev -- npx prisma migrate dev --name init",
		"dev": "npm run migrate-dev && npx dotenv -e .env.dev -- nodemon --config ../config/nodemon.json",
		"test:integration:setup": "docker compose up -d && npx wait-on tcp:localhost:3307",
		"test:integration:teardown": "docker compose down",
		"test:integration": "npm run test:integration:setup && npx dotenv -e .env.test -- npx prisma migrate deploy && npx dotenv -e .env.test -- jest -i --runInBand",
		"test:unit": "jest -c jest.config.unit.ts --watch"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"description": "",
	"dependencies": {
		"@prisma/client": "^5.16.1",
		"class-validator": "^0.14.1",
		"cors": "^2.8.5",
		"crypto-js": "^4.2.0",
		"crypto-random-string": "^5.0.0",
		"dotenv-cli": "^7.4.2",
		"express": "^4.19.2",
		"express-ws": "^5.0.2",
		"reflect-metadata": "^0.2.2",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/express-ws": "^3.0.4",
		"@types/jest": "^29.5.12",
		"jest": "^29.7.0",
		"nodemon": "^3.1.3",
		"prisma": "^5.16.1",
		"ts-jest": "^29.1.5",
		"ts-node": "^10.9.2",
		"typescript": "^5.4.5",
		"wait-on": "^7.2.0"
	},
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	}
}

